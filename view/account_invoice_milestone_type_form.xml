<form string="Milestone Type">
    <label name="kind"/>
    <field name="kind"/>
    <label name="milestone_group"/>
    <field name="milestone_group"/>
    <separator id="trigger" string="Trigger" colspan="4"
        states="{'invisible': Eval('kind') != 'system'}"/>
    <label name="trigger"/>
    <field name="trigger"/>
    <label name="trigger_shipped_amount"/>
    <group col="2" id="trigger_shipped_amount">
        <field name="trigger_shipped_amount" factor="100" xexpand="0"/>
        <label name="trigger_shipped_amount" string="%" xalign="0.0" xexpand="1"
            xfill="1"/>
    </group>

    <separator id="invoicing" string="Invoicing" colspan="4"/>
    <label name="invoice_method"/>
    <field name="invoice_method"/>
    <newline/>
    <label name="amount"/>
    <field name="amount"/>
    <label name="currency"/>
    <field name="currency"/>
    <label name="percentage"/>
    <group col="2" id="percentage">
        <field name="percentage" factor="100"/>
        <label name="percentage" string="%" xalign="0.0" xexpand="1" xfill="1"/>
    </group>
    <label name="divisor"/>
    <group col="2" id="divisor">
        <field name="divisor"/>
        <label name="divisor" string="%" xalign="0.0" xexpand="1" xfill="1"/>
    </group>
    <separator id="invoice_date_calculator" colspan="4"
        string="Invoice Date calculation"/>
    <label name="months"/>
    <field name="months"/>
    <label name="month"/>
    <field name="month"/>
    <label name="weeks"/>
    <field name="weeks"/>
    <label name="weekday"/>
    <field name="weekday"/>
    <label name="days"/>
    <field name="days"/>
    <label name="day"/>
    <field name="day"/>
</form>
