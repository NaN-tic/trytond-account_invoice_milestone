<form string="Milestone">
    <label name="code"/>
    <field name="code"/>
    <label name="group"/>
    <field name="group"/>
    <label name="party"/>
    <field name="party"/>
    <newline/>
    <label name="description"/>
    <field name="description" colspan="3"/>

    <label name="kind"/>
    <field name="kind"/>
    <separator id="trigger" string="Trigger" colspan="4"
        states="{'invisible': Eval('kind') != 'system'}"/>
    <label name="trigger"/>
    <field name="trigger"/>
    <label name="trigger_shipped_amount"/>
    <group col="2" id="trigger_shipped_amount">
        <field name="trigger_shipped_amount" factor="100" xexpand="0"/>
        <label name="trigger_shipped_amount" string="%" xalign="0.0" xexpand="1"
            xfill="1"/>
    </group>
    <field name="trigger_lines" colspan="4"/>

    <separator id="invoicing" string="Invoicing" colspan="4"/>
    <label name="invoice_method"/>
    <field name="invoice_method"/>
    <label name="amount"/>
    <field name="amount"/>
    <label name="advancement_product"/>
    <field name="advancement_product"/>
    <field name="sale_lines_to_invoice" colspan="4"/>
    <field name="sales_to_invoice" colspan="4"/>

    <group id="invoice_date_calculator" colspan="2" col="4"
            string="Invoice Date calculation"
            states="{'invisible': Eval('kind') != 'system'}">
        <label name="months"/>
        <field name="months"/>
        <label name="month"/>
        <field name="month"/>
        <label name="weeks"/>
        <field name="weeks"/>
        <label name="weekday"/>
        <field name="weekday"/>
        <label name="days"/>
        <field name="days"/>
        <label name="day"/>
        <field name="day"/>
    </group>
    <group id="invoice" colspan="2" col="2">
        <label name="planned_invoice_date"/>
        <field name="planned_invoice_date"/>
        <label name="invoice_date"/>
        <field name="invoice_date"/>
        <label name="invoice"/>
        <field name="invoice"/>
    </group>

    <separator id="state_buttons_separator" colspan="4"/>
    <group id="state_buttons" colspan="4" col="6">
        <label name="state"/>
        <field name="state"/>
        <label name="processed_date"/>
        <field name="processed_date"/>
        <group id="buttons" colspan="2" col="10">
            <button name="cancel" string="Cancel"/>
            <button name="draft" string="Draft"/>
            <button name="confirm" string="Confirm"/>
            <button name="do_invoice" string="Invoice"/>
        </group>
    </group>
</form>
